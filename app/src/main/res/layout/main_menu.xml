<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  메뉴 UI  -->


    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="365dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="48dp"
                android:background="#B4B4FF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="730dp">

                    <!--         취소 버튼 -->
                    <ImageButton
                        android:id="@+id/cancel"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="-5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cancel"></ImageButton>

                    <!-- 프로필 -->
                    <Button
                        android:id="@+id/menubtn_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"></Button>

                    <!-- 닉네임 -->
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:background="#00FF0000"
                        android:gravity="center"
                        android:text="돌굴러가유"
                        android:textSize="20dp"></TextView>

                    <!-- 프로필 변경 -->
                    <Button
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginTop="65dp"
                        android:background="#00FF0000"
                        android:gravity="right"
                        android:text="프로필변경"
                        android:textColor="#000000"></Button>

                </LinearLayout>

                <!--                <View-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="3px"-->
                <!--                    android:layout_marginLeft="-400dp"-->
                <!--                    android:layout_marginTop="130dp"-->
                <!--                    android:background="#000000" />-->


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-90dp"
                    android:layout_marginTop="115dp"
                    android:gravity="right"
                    android:text="레시피" />


                <Button
                    android:id="@+id/identify_food_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="내가 본 레시피"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/bookmark_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="209dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="즐겨찾기"
                    android:textColor="#000000"
                    android:textSize="25dp" />


                <Button
                    android:id="@+id/product_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="258dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="최근 본 상품"
                    android:textColor="#000000"
                    android:textSize="25dp" />


                <Button
                    android:id="@+id/product_storage_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="306dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="찜 목록"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/product_storage2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="355dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="장바구니"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/product_list_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="403dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="주문내역"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/evaluation_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="452dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="내가 쓴 후기"
                    android:textColor="#000000"
                    android:textSize="25dp" />


                <!--        &lt;!&ndash;    설정 버튼    &ndash;&gt;-->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-368dp"
                    android:layout_marginTop="500dp"
                    android:background="@drawable/line"
                    android:gravity="right"
                    android:text="설정"
                    android:textColor="#000000"
                    android:textSize="25dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>