                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginLeft="-600dp"
                        android:layout_marginTop="60dp"
                        android:background="#000000" />
                </LinearLayout>

<!--                재료/모두담기-->
