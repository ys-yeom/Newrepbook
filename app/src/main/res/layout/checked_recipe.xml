                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="730dp">

                    <ImageButton
                        android:id="@+id/cancel"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
