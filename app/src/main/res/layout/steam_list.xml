<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/steam_list"
        android:layout_width="365dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="48dp"
                android:background="#B4B4FF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="730dp">

                    <!--         취소 버튼 -->

                    <ImageButton
                        android:id="@+id/cancel"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="-5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cancel"></ImageButton>

                    <TextView
                        android:layout_width="123dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="90dp"
                        android:text="찜한 상품"
                        android:textSize="27dp" />

                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginLeft="-400dp"
                        android:layout_marginTop="55dp"
                        android:background="#000000" />

                <TextView
                    android:layout_width="229dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-190dp"
                    android:layout_marginTop="60dp"
                    android:text="냄비"
                    android:textSize="20dp" />

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="-400dp"
                        android:layout_marginTop="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pot" />

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="85dp"
                    android:text="25,000원"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/delete_btn"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="-170dp"
                    android:layout_marginTop="135dp"
                    android:text="삭제"/>

                <Button
                    android:id="@+id/basket_btn"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="135dp"
                    android:text="장바구니"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="-400dp"
                    android:layout_marginTop="187dp"
                    android:background="#000000" />

<!--               // 2-->
                <TextView
                    android:layout_width="229dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-190dp"
                    android:layout_marginTop="190dp"
                    android:text="상추"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="-400dp"
                    android:layout_marginTop="194dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/lettuce" />

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="220dp"
                    android:text="27,000원"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="-170dp"
                    android:layout_marginTop="265dp"
                    android:text="삭제"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="265dp"
                    android:text="장바구니"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="-400dp"
                    android:layout_marginTop="320dp"
                    android:background="#000000" />

<!--                //3-->
                <TextView
                    android:layout_width="229dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-190dp"
                    android:layout_marginTop="320dp"
                    android:text="계란"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="-400dp"
                    android:layout_marginTop="325dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/egg" />

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="350dp"
                    android:text="18,000원"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="-170dp"
                    android:layout_marginTop="400dp"
                    android:text="삭제"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="400dp"
                    android:text="장바구니"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="-400dp"
                    android:layout_marginTop="450dp"
                    android:background="#000000" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>